<OtherSettingsScreen>:
    drop_area_image: drop_area_image
    drop_area_label: drop_area_label

    BoxLayout:
        orientation: 'vertical'     # 'horizontal'だと横一列
        size: root.size
        BoxLayout:
            size_hint_y: 0.1

            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Image:
                source: './UI_images/title.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                allow_stretch: True
        Label:
            size_hint_y:0.002
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

        BoxLayout: #選択ボタン
            size_hint_y: 0.1

            Button:
                text: '画像設定'
                color: 1,1,1,1
                font_size: dp(30)
                background_color: (0.3, 0.3, 0.3, 1.0)
                on_press: root.manager.current = 'settings'

            Button:
                text: '詳細設定'
                color: (1.0, 1.0, 1.0, 1.0)
                font_size: dp(30)
                background_color: (0.0, 0.6, 0.7, 1)
                #on_press: root.manager.current = 'other_settings'

        Label:
            size_hint_y:0.002
            canvas.before:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    pos: self.pos
                    size: self.size


        BoxLayout: #画像読み込み画面
            size_hint_y: 0.6996
            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            BoxLayout:
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    padding: 40

                    BoxLayout:
                        orientation: 'vertical'

                        BoxLayout:
                            size_hint_y: 0.6
                            orientation: 'horizontal'

                            BoxLayout:
                                size_hint_x: 0.475
                                canvas.before:
                                    Color:
                                        rgba: 0.9, 0.9, 0.9, 1
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size

                                AnchorLayout:
                                    anchor_x: 'center'
                                    anchor_y: 'center'
                                    padding: 7

                                    Label:
                                        id: drop_area_label
                                        bold: True
                                        text: 'ファイルをドラッグ＆ドロップ'
                                        color: 1,1,1,1
                                        font_size: dp(20)

                                        canvas.before:
                                            Color:
                                                rgba: 0.1, 0.1, 0.1, 1
                                            Rectangle:
                                                pos: self.pos
                                                size: self.size
                                    Image:
                                        id: drop_area_image
                                        source: root.image_src
                                        center_x: self.parent.center_x
                                        center_y: self.parent.center_y
                                        allow_stretch: True

                            BoxLayout:
                                size_hint_x: 0.05

                            BoxLayout:
                                size_hint_x: 0.475
                                orientation: 'vertical'

                                BoxLayout:
                                    size_hint_y: 0.15
                                    Label:
                                        text: '背景の設定'
                                        color: 1,1,1,0.8
                                        font_size: dp(25)
                                        text_size: self.size
                                        halign: 'center'
                                        valign: 'middle'

                                        canvas.before:
                                            Color:
                                                rgba: 0.2, 0.2, 0.2, 1
                                            Rectangle:
                                                pos: self.pos
                                                size: self.size

                                BoxLayout:
                                    size_hint_y: 0.85

                                    BoxLayout:
                                        orientation: 'vertical'

                                        BoxLayout:
                                            size_hint_y: 0.15
                                            Label:
                                                text: '　・背景画像を左の枠内にドラッグ&ドロップしてください'
                                                font_size: dp(20)
                                                text_size: self.size
                                                halign: 'left'
                                                valign: 'middle'

                                                color: 1,1,1,0.8
                                                canvas.before:
                                                    Color:
                                                        rgba: 0.3, 0.3, 0.3, 1
                                                    Rectangle:
                                                        pos: self.pos
                                                        size: self.size

                                        BoxLayout:
                                            size_hint_y: 0.15
                                            Label:
                                                text: '　・画像サイズ・縦横比は画面に応じて自動変更されます'
                                                font_size: dp(20)
                                                text_size: self.size
                                                halign: 'left'
                                                valign: 'middle'

                                                color: 1,1,1,0.8
                                                canvas.before:
                                                    Color:
                                                        rgba: 0.3, 0.3, 0.3, 1
                                                    Rectangle:
                                                        pos: self.pos
                                                        size: self.size
                                        BoxLayout:
                                            size_hint_y: 0.7
                                            Label:
                                                text: ''
                                                color: 1,1,1,0.8
                                                font_size: dp(20)
                                                canvas.before:
                                                    Color:
                                                        rgba: 0.3, 0.3, 0.3, 1
                                                    Rectangle:
                                                        pos: self.pos
                                                        size: self.size
                        BoxLayout:
                            size_hint_y: 0.4
                            Label:
                                text: ''
                                color: 1,1,1,1
                                font_size: 50
                                canvas.before:
                                    Color:
                                        rgba: 0.1, 0.1, 0.1, 1
                                    Rectangle:
                                        pos: self.pos
                                        size: self.size
        BoxLayout: #画像読み込み画面
            size_hint_y: 0.1

            canvas.before:
                Color:
                    rgba: 0.1, 0.1, 0.1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            BoxLayout:
                size_hint_x: 0.35

            BoxLayout:
                size_hint_x: 0.1
                orientation:'horizontal'
                Button:
                    background_color: (0.3, 0.3, 0.3, 1.0)
                    on_press: root.manager.current = 'tutorial'

                    Image:
                        source: './UI_images/white_question.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        allow_stretch: True


            BoxLayout:
                size_hint_x: 0.1
                orientation:'horizontal'
                Button:
                    background_color: (0.3, 0.3, 0.3, 1.0)
                    on_press: root.manager.current = 'settings'

                    Image:
                        source: './UI_images/orange_gear.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        allow_stretch: True

            BoxLayout:
                size_hint_x: 0.1
                orientation:'horizontal'
                Button:
                    background_color: (0.3, 0.3, 0.3, 1.0)
                    on_press: root.start_video()
                    on_release: root.manager.current = 'video'

                    Image:
                        source: './UI_images/white_video.png'
                        center_x: self.parent.center_x
                        center_y: self.parent.center_y
                        allow_stretch: True

            BoxLayout:
                size_hint_x: 0.35
